@model List<AdvertisementListDto>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @if (Model?.Count >= 0)
    {
        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
        </div>


        <table class="mt-3 table table-sm table-hover table-striped">

            <thead>
                <tr>
                    <th>İlan Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>İlan Durumu</th>
                    <th>İşlem</th>


                </tr>
            </thead>

            <tbody>
                @foreach (var advertisement in Model)
                {
                    <tr>
                        <td>@advertisement.Title</td>
                        <td>@advertisement.CreatedDate.ToString("MM/dd/yyyy")</td>
                        <td>@(advertisement.Status ? "Aktif" : "Pasif")</td>

                        <td>
                            <a asp-action="Update" asp-controller="Application" asp-route-id="@advertisement.Id">Güncelle</a>
                            <a asp-action="Remove" asp-controller="Application" asp-route-id="@advertisement.Id">Sil</a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="text-end my-3 p-1">
            <a asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>

        </div>
        <div class="mt-3 text-center">Herhangi bir ilan bulunmamaktadır</div>
    }

</div>


